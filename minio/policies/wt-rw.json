{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": [
        "arn:aws:s3:::webtutor",
        "arn:aws:s3:::spxml-blobs",
        "arn:aws:s3:::applications",
        "arn:aws:s3:::ft-idx",
        "arn:aws:s3:::logs",
        "arn:aws:s3:::records"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject", 
        "s3:PutObject", 
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::webtutor/*",
        "arn:aws:s3:::spxml-blobs/*",
        "arn:aws:s3:::applications/*",
        "arn:aws:s3:::ft-idx/*",
        "arn:aws:s3:::logs/*",
        "arn:aws:s3:::records/*"
      ]
    }
  ]
}