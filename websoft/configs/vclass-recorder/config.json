{
  "Logging": {
    "LogDir": "logs",
    "DebugMode": "false"
  },	
  "Service": {
    "Kestrel": {
      "EndPoints": {
        "Https": {
          "Url": "https://*:8300",						
          "Certificate": {
            "Path": "../certs/recorder.pfx",
            "Password": "recpass",
            "AllowInvalid": "true"
          }
        }
      },

      "AllowSynchronousIO": "true",

      "Limits": {
        "MaxConcurrentConnections": 10000, 
        "MaxConcurrentUpgradedConnections": 1000, 
        "MaxRequestBodySize": 536870912, 
        "MaxRequestHeaderCount": 100 
      }
      
    },
    "WebSocketOptions": {
      "KeepAliveInterval": "0.00:03:00",
      "ReceiveBufferSize": 4096
    },
    		"Credentials":
      {
        "Username": "admin",
        "Password": "recsite"
      },
    "FlushAsyncWait": "true",
    "WriteAsyncWait": "true",
    "WorkerThreads": {
      "MinWorkerThreads": "100",
      "MinIOCThreads": "200",
      "MaxWorkerThreads": "0",
      "MaxIOCThreads": "0"
    },
   "Logging": false
  },
  "Recording": {
	"ReInitPulseAudioBeforeStartRecorder": "true",
    "RecordingDir": "records",					
    "Clients": [
      {
        "Credentials": {
          "Username": "user1",					
          "Password": "user1"
        },
        "RecordingDir": "",				
        "Host": "https://wt.local",
        "Slots": 5,
        "FfmpegConfig": {
          "StartDelay": "4000",
          "CommandOptions": "",
          "CommandOutputOptions": "-pix_fmt yuv420p"
        }
      }
    ]
  }
}
