{
  "Version": "1.0",
  "Description": "This is a VFS template-configuration for WebSoft HCM using S3 storage.",
  "LookFailedUrlsOnLocal": true,
  "FetchBackFoundUrls": true,
  "DeleteFoundUrlsFromLocal": false,

  "Mappings": {
    "x-local://wt/web/webtutor/": { "Enabled": true, "Endpoint": "vfs_webtutor" },
    "x-local://applications/":    { "Enabled": true, "Endpoint": "vfs_applications" },
    "uni:x-local://":             { "Enabled": true, "Endpoint": "vfs_spxml_blobs" },
    "lucene:":                    { "Enabled": true, "Endpoint": "vfs_ftidx" },
    "logs:":                      { "Enabled": true, "Endpoint": "vfs_logs" }
  },
  "Endpoints": {
    "vfs_webtutor": {
      "Assembly": "Datex.VFS.S3",
      "Type": "Datex.Core.VFS.NSS3.S3",
      "Settings": {
        "ServiceURL": "https://minio:9000",
        "SecretAccessKeyId": "wt-s3",
        "SecretAccessKey": "E3L8jN4uQkC7pT0mZx1R9wV6sB5aH2yP",
        "Bucket": "webtutor",
        "Location": "",
        "ForcePathStyle": true,
        "Timeout": 60
      }
    },
    "vfs_spxml_blobs": {
      "Assembly": "Datex.VFS.S3",
      "Type": "Datex.Core.VFS.NSS3.S3",
      "Settings": {
        "ServiceURL": "https://minio:9000",
        "SecretAccessKeyId": "wt-s3",
        "SecretAccessKey": "E3L8jN4uQkC7pT0mZx1R9wV6sB5aH2yP",
        "Bucket": "spxml-blobs",
        "Location": "",
        "ForcePathStyle": true,
        "Timeout": 60
      }
    },
    "vfs_applications": {
      "Assembly": "Datex.VFS.S3",
      "Type": "Datex.Core.VFS.NSS3.S3",
      "Settings": {
        "ServiceURL": "https://minio:9000",
        "SecretAccessKeyId": "wt-s3",
        "SecretAccessKey": "E3L8jN4uQkC7pT0mZx1R9wV6sB5aH2yP",
        "Bucket": "applications",
        "Location": "",
        "ForcePathStyle": true,
        "Timeout": 60
      }
    },
    "vfs_ftidx": {
      "Assembly": "Datex.VFS.S3",
      "Type": "Datex.Core.VFS.NSS3.S3",
      "Settings": {
        "ServiceURL": "https://minio:9000",
        "SecretAccessKeyId": "wt-s3",
        "SecretAccessKey": "E3L8jN4uQkC7pT0mZx1R9wV6sB5aH2yP",
        "Bucket": "ft-idx",
        "Location": "",
        "ForcePathStyle": true,
        "Timeout": 60
      }
    },
    "vfs_logs": {
      "Assembly": "Datex.VFS.S3",
      "Type": "Datex.Core.VFS.NSS3.S3",
      "Settings": {
        "ServiceURL": "https://minio:9000",
        "SecretAccessKeyId": "wt-s3",
        "SecretAccessKey": "E3L8jN4uQkC7pT0mZx1R9wV6sB5aH2yP",
        "Bucket": "logs",
        "Location": "worker-backend/",
        "ForcePathStyle": true,
        "Timeout": 60,
        "LogMinCheckInterval": 5,
        "LogConsolidation": true,
        "LogConsolidateCheckInterval": 60,
        "LogFullConsolidation": true
      }
    }
  }
}