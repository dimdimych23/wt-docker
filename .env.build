# .env.build — параметры СБОРКИ/ПУБЛИКАЦИИ образа (не путать с .env запуска)

# БАЗОВЫЙ образ от WebSoft
WT_BASE_IMAGE=websoft/hcm:2025.2.1225
BUILD_PLATFORM=linux/amd64

# ИМЯ/ТЕГ твоего образа
IMAGE_REPO=websoft/hcm            # <namespace>/<name> (без реестра)
IMAGE_TAG=2025.2.1225-tmk.1       # меняй при каждом обновлении

# МЕТАДАННЫЕ (OCI labels)
IMAGE_TITLE=WebSoft HCM (TMK custom)
IMAGE_DESCRIPTION=HCM с кастомным набором компонентов для ТМК (net9).
LABEL_NOTES=net9; OmniCode на web+worker; без DotNetBuild

# ОТКУДА брать твои компоненты в репозитории (распакованные папки)
COMPONENTS_SRC=websoft/components.src

# Какие компоненты включать из websoft/components.src
# Если пусто — берём все подпапки из components.src
COMPONENTS_EXTRA_LIST=websoft_dotnetbuild,websoft_omnicode

# ПУБЛИКАЦИЯ в Nexus (опционально). Если REGISTRY_HOST пуст — пуша не будет
REGISTRY_HOST=                    # напр. registry.tmk.local
REGISTRY_USER=
REGISTRY_PASS=
PUSH=false